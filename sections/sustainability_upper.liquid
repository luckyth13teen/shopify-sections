            <div class="triple-copy">
            <p>{{section.settings.lefttriplecopy2}}</p>
            
               <a class="cta dropshadow" href="{{section.settings.tertiarylink2}}">{{section.settings.tertiarytext2}}</a>
            </div>
      </div>
    <div class="triple-section">
  
            <img class="triple-img-container" src="{{section.settings.tertiarylinkimg3 | img_url: '900x' }}">
            <div class="triple-header">
            <h3>{{section.settings.lefttripletitle3}}</h3>
           </div>
            <div class="triple-copy">
            <p>{{section.settings.lefttriplecopy3}}</p>
            
               <a class="cta dropshadow" href="{{section.settings.tertiarylink3}}">{{section.settings.tertiarytext3}}</a>
          </div>
      </div>
  </div>
                                                                          
