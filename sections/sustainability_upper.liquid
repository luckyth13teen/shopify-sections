

<div class="homepage-banner">

    <div class="banner top-banner desktop">
      <img class="new-banner-desktop" src="{{ section.settings.topbannerdesktop | img_url: '2000x' }}">
      {% if section.settings.topbannertitle != blank %}
      <div class="new-callouts desktop">
        <div class="new-content-right" >
          <h1 style="color: {{ section.settings.topbannercolor }};" class="waypoint fade-in">{{ section.settings.topbannertitle }}</h1>
          {% if section.settings.topbannercopy != blank %}<p style="color: {{ section.settings.topbannercolor }};">{{ section.settings.topbannercopy }}</p>{% endif %}
          {% if section.settings.topbannerpricing != blank %}{{ section.settings.topbannerpricing }}{% endif %}
          {% if section.settings.topbannerbtn != blank %}<a class="cta dropshadow"  style="margin-top: 15px;" href="{{ section.settings.topbannerbtnlink }}">{{ section.settings.topbannerbtn }}</a>{% endif %}
          {% if section.settings.logo1 != blank %}
            <div class="collab-logos">
              <img src="{{ section.settings.logo2 | img_url: '600x' }}">
              <span>+</span>
              <img src="{{ section.settings.logo1 | img_url: '600x' }}">
            </div>
          {% endif %}
         
        </div>
      </div>
  
       {% if section.settings.logo3 != blank %}
          <img class="botom-right-icon" src="{{ section.settings.logo3 | img_url: '300x' }}">
          {% endif %}
      {% endif %}
    </div>
    <div class="banner top-banner mobile">
      <img class="new-banner-mobile" src="{{ section.settings.topbannermobile | img_url: '900x' }}">
      <div class="content">
        <h1 class="waypoint fade-in">{{ section.settings.topbannertitle }}</h1>
        {% if section.settings.topbannercopy != blank %}{{ section.settings.topbannercopy }}{% endif %}
        {% if section.settings.topbannerbtn != blank %}<a class="cta dropshadow"  style="margin-top: 15px;" href="{{ section.settings.topbannerbtnlink }}">{{ section.settings.topbannerbtn }}</a>{% endif%}
      </div>
    </div>
  
  </div>
  
  <div class="full-width-copy" style="backgroundcolor: {{ section.settings.secbackgroundcolor }};">
    <div style="max-width: 800px; margin: 0 auto;">
    <h1 class="waypoint fade-in" "color: {{ section.settings.secfontcolor }};">{{ section.settings.fulltitle }}</h1>
   
    {{ section.settings.fullcopy }} 
     
    </div>
  </div>
  <div class="triple-container" style="background-color: rgb(243, 236, 222);">
      <div class="triple-section">
  
            <img class="triple-img-container" src="{{section.settings.tertiarylinkimg | img_url: '900x' }}">
            <div class="triple-header">
            <h3>{{section.settings.lefttripletitle}}</h3>
           </div>
            <div class="triple-copy">
            <p>{{section.settings.lefttriplecopy}}</p>
            
               <a class="cta dropshadow" href="{{section.settings.tertiarylink1}}">{{section.settings.tertiarytext1}}</a>
          </div>
      </div>
      <div class="triple-section">
  
            <img class="triple-img-container" src="{{section.settings.tertiarylinkimg2 | img_url: '900x' }}">
            <div class="triple-header">
            <h3>{{section.settings.lefttripletitle2}}</h3>
